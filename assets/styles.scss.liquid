@font-face {
    font-family: 'Magallanes Regular';
    src: url('MagallanesRegular.eot');
    src: url('MagallanesRegular.eot?#iefix') format('embedded-opentype'),
    url('MagallanesRegular.woff') format('woff'),
    url('MagallanesRegular.ttf') format('truetype');
    font-weight: normal;
    font-style: bold;
    }
    
    body{
      position: relative;
      min-height: 100vh;
      background-color: white;
      color: {{ settings.color_body_text }};
      font-family: 'Open Sans', sans-serif;
      font-size: 17px;
      width: 100%;
    } 
    
    a{
        margin: auto;
    }

.purple:hover{
    color: white;
    background-color: #6241BB;
    border-color: #6241BB;
    transition: 0.25s;
    border: 1px solid #6241BB;
}

.blue:hover{
    color: white;
    background-color: #3276AF;
    border-color: #3276AF;
    transition: 0.25s;
    border: 1px solid #3276AF;
}

.yellow:hover{
    color: white;
    background-color: #E9C546;
    border-color: #E9C546;
    transition: 0.25s;
    border: 1px solid #E9C546;
}

.main-content{
    padding-top: 0!important;
}

.bronze-package{
    display: none;
}

.premium-package{
}

.gold-package{
    display: none;
}

