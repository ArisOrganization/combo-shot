  .bottle-container{
    position: relative;
    width: 30%;
    justify-content: center;
    display: flex;
    flex-direction: column;
    margin: auto;
  }

  .bottle-overlay{
      position: absolute;
      width: 80%;
      height: 85%;
      background-color: rgba(245, 245, 245, 0.92);
      opacity: 0;
      transition: 0.25s;
      right: 10%;
      top: 0;
  }

  .bottle-overlay-text{
