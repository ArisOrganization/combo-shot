@font-face {
    font-family: 'Magallanes Regular';
    src: url('MagallanesRegular.eot');
    src: url('MagallanesRegular.eot?#iefix') format('embedded-opentype'),
    url('MagallanesRegular.woff') format('woff'),
    url('MagallanesRegular.ttf') format('truetype');
    font-weight: normal;
    font-style: bold;
    }
    
    body{
      position: relative;
      min-height: 100vh;
      background-color: white;
      color: {{ settings.color_body_text }};
      font-family: 'Open Sans', sans-serif;
      font-size: 17px;
      width: 100%;
    }    
    
    .gold-hero-section{
      position: relative;
      background:url({{ 'hero-background-gold.jpeg'}});
      background-repeat: no-repeat;
      background-size: cover;
      width: 100%;
      background-position-y: -450px;
      padding: 300px 0;
    }

    .premium-hero-section{
      position: relative;
      background:url({{ 'hero-background-premium.jpeg'}});
      background-repeat: no-repeat;
      background-size: cover;
      width: 100%;
      background-position-y: -450px;
      padding: 300px 0;
    }

    .bronze-hero-section{
      position: relative;
      background:url({{ 'hero-background-bronze.jpeg'}});
      background-repeat: no-repeat;
      background-size: cover;
      width: 100%;
      background-position-y: -450px;
      padding: 300px 0;
    }
    
    .header-logos{
      display: flex;
      flex-direction: row;
      justify-content: center;
      margin: auto;
      position: absolute;
      width: 70%;
      top: 2%;
      left: 18%;
      z-index: 1000;
    }
    
    .combo-shot-logo{
      margin-left: 0;
      margin-right: auto;
    }
    
    .trustpilot-rating{
      width: 109px;
      height: 47.7px;
      margin-left: auto;
      margin-right: 0;
    }
    
    .hero-left{
      width: 65%;
      margin: auto;
    }
    
    .premium-header{
      margin: 0 0 15px;
    }
    
    .premium-title{
      font-family: 'Magallanes Regular';
      font-size: 40px;
      font-style: normal;
      font-weight: 600;
      text-align: left;
      color: #3276AF;
      margin: 0;
    }

    .gold-title{
      font-family: 'Magallanes Regular';
      font-size: 40px;
      font-style: normal;
      font-weight: 600;
      text-align: left;
      color: #6241BB;
      margin: 0;
    }

    .bronze-title{
      font-family: 'Magallanes Regular';
      font-size: 40px;
      font-style: normal;
      font-weight: 600;
      text-align: left;
      color: #E9C546;
      margin: 0;
    }
    
    .premium-price{
      font-family: 'Magallanes Regular';
      font-size: 20px;
    }
    
    .premium-text{
      width: 700px;
      font-size: 25px;
    }
    
    .buy-btn{
      background: #EAEAEA;
      border: 1.4px solid #4A4A4A;
      box-sizing: border-box;
      color: {{ settings.color_body_text }};
      font-size: 25px;
      padding: 10px 140px;
      margin: 20px 0;
      transition: 0.25s;
    }

    .gold-type-container{
      width: 25%;
      display: flex;
      justify-content: flex-start;
    }

    .gold-type{
      width: 30%;
      display: flex;
      flex-direction: row;
      margin: 5px;
    }

    .gold-type-btn{
      width: 105px;
      height: 31px;
    }