.reviews-section{
  padding: 100px 0 300px;
}

.reviews-header{
  width: 100%;
  text-align: center;
  font-family: 'Magallanes Regular';
}

.reviews-group{
  width: 50%;
  display: flex;
  justify-content: center;
  flex-direction: row;
  margin: auto;
}

.review-container{
  width: 30%;
  justify-content: center;
  display: flex;
  flex-direction: column;
  margin: auto;
  background-color: #F5F5F5;
  padding: 15px;
}

.reivew-text{
  margin: auto;
}

.rating{
  display: flex;
  width: 100%;
}

.trust-time{
  margin: auto 0 auto auto;
}

.review-title{
  margin: 5px auto;
}

.review-paragraph{
  margin: 5px auto;
  min-height: 100px;
}