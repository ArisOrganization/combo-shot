$(".bronze-btn").click(function(){
    $(".bronze-package").fadeIn()
    $(".bronze-btn").addClass("active-tab");
    $(".premium-package").fadeOut()
    $(".premium-btn").removeClass("active-tab");
    $(".gold-package").fadeOut()
    $(".gold-btn").removeClass("active-tab");
  });

$(".premium-btn").click(function(){
    $(".bronze-package").fadeOut()
    $(".bronze-btn").removeClass("active-tab");
    $(".premium-package").fadeIn()
    $(".premium-btn").addClass("active-tab");
    $(".gold-package").fadeOut()
    $(".gold-btn").removeClass("active-tab");
});

$(".gold-btn").click(function(){
    $(".bronze-package").fadeOut()
    $(".bronze-btn").removeClass("active-tab");
    $(".premium-package").fadeOut()
    $(".premium-btn").removeClass("active-tab");
    $(".gold-package").fadeIn()
    $(".gold-btn").addClass("active-tab");
});