header.header {
  display: flex;
  justify-content: space-between;
  padding: 25px clamp(20px, 10vw, 125px);
  position: relative;
  z-index: 1;
}

@font-face {
  font-family: "Magallanes";
  src: url({{"MagallanesRegular.ttf" | asset_url}}) format("truetype");
}
.main-content {
  padding: 0 !important;
  margin: 0 !important;
  background: #e5e5e5;
}

.theme-button {
  font-family: "Open Sans";
  font-size: 18px;
  line-height: 25px;
  color: #4a4a4a;
  background: #eaeaea;
  border: 1px solid #4a4a4a;
  padding: 12px 32px;
  margin-top: 50px;
  display: inline-block;
  text-align: center;
}
.theme-button.large {
  display: block;
}
.theme-button.purple:hover {
  color: white;
  background-color: #6241bb;
  border-color: #6241bb;
  transition: 0.25s;
}
.theme-button.blue:hover {
  color: white;
  background-color: #3276af;
  border-color: #3276af;
  transition: 0.25s;
}
.theme-button.yellow:hover {
  color: white;
  background-color: #e9c546;
  border-color: #e9c546;
  transition: 0.25s;
}

.shape::after {
  content: "";
  position: absolute;
  left: 0;
  top: -90px;
  height: 1050px;
  width: 100%;
  background: url({{"hero-shape.svg"}});
  background-repeat: no-repeat;
  background-size: cover;
  z-index: 0;
}

.home-hero {
  position: relative;
  display: flex;
  width: 100%;
  z-index: 10;
  padding: 0 clamp(20px, 10vw, 125px);
  margin-top: 120px;
  margin-bottom: 250px;
}
.home-hero-left {
  flex-basis: 45%;
  padding-top: 50px;
  padding-right: 10px;
}
.home-hero-left .home-text {
  font-family: "Open Sans";
  font-size: 17px;
  color: #ffffff;
}
.home-hero-left .home-text strong {
  font-weight: 600;
}
.home-hero-left .home-header .home-title {
  font-family: "Magallanes";
  font-style: normal;
  font-weight: 500;
  font-size: 28px;
  margin-bottom: 0;
  color: #f5f5f5;
}
.home-hero-left .home-header .home-text {
  margin-bottom: 40px;
}
.home-hero-right {
  display: flex;
  flex-basis: 65%;
}
.home-hero .img-container {
  right: -40px;
  position: absolute;
}

.products-section {
  min-height: 750px;
}
.products-section .all-packages-title {
  font-family: "Magallanes";
  font-weight: 500;
  font-size: 34px;
  text-align: center;
  color: #525252;
}
.products-section .all-packages-sub-text {
  text-align: center;
  font-family: Open Sans;
  font-size: 18px;
  text-align: center;
  color: #525252;
}
.products-section .all-packages-sub-text span {
  display: block;
}
.products-section .all-packages-container {
  max-width: 1250px;
  margin: 0 auto;
  padding: 0 25px;
  margin-top: 45px;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.products-section .package-card {
  min-width: 250px;
  display: flex;
  flex-direction: column;
  margin-top: 50px;
}
.products-section .package-card .title {
  max-width: 300px;
}
.products-section .package-card .title p {
  position: relative;
  font-family: "Open Sans";
  font-weight: 600;
  font-size: 20px;
  margin: 5px;
  color: #636363;
}
.products-section .package-card .title p:last-of-type {
  font-size: 16px;
  display: block;
  font-weight: 400;
}
.products-section .package-card .title p.starts::after {
  content: "";
  position: absolute;
  background: url({{"stars.svg"}});
  height: 15px;
  width: 88px;
  margin-left: 10px;
  top: 7px;
}
.products-section .package-card .card-footer {
  margin-top: auto;
}
.products-section .package-card .large {
  margin-top: 10px;
  width: 90%;
  padding: 5px;
  font-size: 16px;
}
.products-section .package-card .price {
  padding-top: 25px;
}
.products-section .package-card .price p {
  font-family: "Open Sans";
  font-style: normal;
  font-weight: 600;
  font-size: 18px;
  color: #3676a8;
  text-align: center;
  width: 100%;
}

.all-bottles {
  max-width: 1250px;
  margin: 0 auto;
  padding: 0 25px;
  margin-top: 45px;
}
.all-bottles .bottles-container {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.all-bottles .bottle-card {
  width: 310px;
  display: flex;
  flex-direction: column;
  margin-top: 50px;
}
.all-bottles .bottle-card-img {
  position: relative;
}
.all-bottles .bottle-card-img:hover .overlay-bottle {
  z-index: 0;
  opacity: 1;
}
.all-bottles .bottle-card-img .overlay-bottle {
  position: absolute;
  height: 95%;
  width: 100%;
  background-color: rgba(255, 255, 255, 0.65);
  padding: 35px;
  opacity: 0;
  z-index: -1;
  transition: opacity 1s;
}
.all-bottles .bottle-card-img .overlay-bottle p {
  font-size: 16px;
  line-height: 18px;
}
.all-bottles .bottle-card-img .overlay-bottle p:first-of-type {
  font-weight: 700;
}
.all-bottles .bottle-card-img img {
  width: 245.32px;
  height: 426.79px;
}
.all-bottles .bottle-card-info {
  margin-top: -20px;
}
.all-bottles .bottle-card-info p {
  font-family: "Open Sans";
  line-height: 1;
  margin: 0;
  font-size: 18px;
}
.all-bottles .bottle-card-info p.tags {
  margin: 5px 0 10px;
  font-family: "Open Sans";
  font-size: 16px;
  color: #b1b1b1;
}

.button-container {
  margin: 75px 0;
}
.button-container .theme-button {
  margin: 0 auto;
  width: 320px;
}

.reviews-section {
  background-color: #fff;
  min-height: 500px;
  padding: 95px 0 20px 0;
}
.reviews-section h2 {
  font-family: "Magallanes";
  text-align: center;
  margin-bottom: 55px;
  font-weight: 500;
  font-size: 34px;
  color: #000000;
}
.reviews-section .slick-container {
  width: 80%;
  max-width: 1024px;
  margin: 0 auto;
}
.reviews-section .review {
  width: 305px;
  height: 200px;
  background: #f5f5f5;
  border-radius: 10px;
  margin-right: 20px;
  color: white;
  text-align: center;
}
.reviews-section .trust-line {
  margin-top: 25px;
  display: flex;
  justify-content: center;
}

.footer-section {
  width: 100%;
  height: 300px;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.footer-logo-container {
  width: 100%;
  padding-top: 70px;
  display: flex;
  justify-content: center;
}

.footer-social-links {
  width: 100%;
  margin-top: 50px;
  display: flex;
  justify-content: center;
}

.social-icons {
  margin: 0 30px;
}

.social-img {
  padding: 10px;
  height: 50px;
}

.footer-other-links {
  padding: 10px;
  width: 100%;
  display: flex;
  justify-content: center;
  align-content: center;
}
.footer-other-links p {
  color: black;
  font-weight: 400;
}
.footer-other-links p span {
  font-weight: 900;
}
.footer-other-links .trustpilot-footer {
  margin-right: 10px;
}

.product-hero {
  background-size: cover;
  background-repeat: no-repeat;
  background-position: right 70%;
  height: 850px;
}

.product-info {
  position: relative;
  height: 750px;
}

#bronze-package .product-info {
  background: url({{"bronze-pack-shape.svg"}});
  background-size: cover;
  background-repeat: no-repeat;
  background-position: bottom center;
}

#gold-package .product-info {
  background: url({{"gold-pack-shape.svg"}});
  background-size: cover;
  background-repeat: no-repeat;
  background-position: bottom center;
}

#premium-package .product-info {
  background: url({{"premiun-pack-shape.svg"}});
  background-size: cover;
  background-repeat: no-repeat;
  background-position: bottom center;
}